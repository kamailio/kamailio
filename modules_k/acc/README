   5.25. acc_to_tag_column (string)
   5.26. acc_callid_column (string)
   5.27. acc_sip_code_column (string)
   5.28. acc_sip_reason_column (string)
   5.29. acc_time_column (string)
   5.30. db_extra (string)
   5.31. diameter_flag (integer)
