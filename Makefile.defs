	doc-dir = share/doc/ser/
	man-dir = share/man/
	LOCALBASE ?= /usr/local
else
ifeq ($(OS), freebsd)
	doc-dir = share/doc/ser/
	man-dir = man/
	LOCALBASE ?= /usr/local
else
ifeq ($(OS), openbsd)
	doc-dir = share/doc/ser/
	man-dir = man/
	LOCALBASE ?= /usr/local
else
ifeq ($(OS), netbsd)
	doc-dir = share/doc/ser
	man-dir = man/
	LOCALBASE ?= /usr/pkg
else
ifeq ($(OS), darwin)
	doc-dir = share/doc/ser/
	man-dir = man/
	LOCALBASE ?= /usr/local
else
	doc-dir = doc/ser/
	man-dir = man/
	LOCALBASE ?= /usr/local
endif
endif
endif
